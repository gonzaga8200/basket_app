<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    android:configChanges="orientation|keyboardHidden"
    tools:context="com.sports.gonzalomoreno.basketstandings.GameActivity"
    android:background="@drawable/gradient">


<LinearLayout
    android:layout_width="800dp"
    android:layout_height="300dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Jugador1"
            android:id="@+id/jugador1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/players"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Jugador2"
            android:id="@+id/jugador2"
            android:textColor="@color/white"
            android:background="@drawable/players"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Jugador3"
            android:id="@+id/jugador3"
            android:textColor="@color/white"
            android:background="@drawable/players"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Jugador4"
            android:id="@+id/jugador4"
            android:textColor="@color/white"
            android:background="@drawable/players"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Jugador5"
            android:id="@+id/jugador5"
            android:textColor="@color/white"
            android:background="@drawable/players"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/scored"
            android:id="@+id/scored_two"
            android:text="2p V"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/failed"
            android:text="2p X"
            android:id="@+id/scored_two_failed"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/scored_one"
            android:background="@drawable/scored"
            android:text="1p V"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/failed"
            android:text="1p X"
            android:id="@+id/scored_one_failed"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/scored"
            android:id="@+id/scored_three_scored"
            android:text="3p V"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/failed"
            android:id="@+id/scored_three_failed"
            android:text="3p X"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rebounds"
            android:id="@+id/rebounds_def"
            android:text="Def. Reb"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rebounds"
            android:id="@+id/rebounds_off"
            android:text="Off. Reb"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/red"
            android:text="Fouls"
            android:id="@+id/fouls"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/assistance"
            android:text="Assis"
            android:id="@+id/assistance"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>
