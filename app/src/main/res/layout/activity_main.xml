<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/miLinear"
    android:background="@drawable/gradient">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TableRow
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/boton_add"
                android:text="@string/texto_boton"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/boton_enviar"
                android:text="@string/texto_boton_enviar"/>
        </TableRow>

    </TableLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lista_jugadores"
        android:hint="@string/pista_jugadores"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PlayerList"
        android:id="@+id/jugadores_aptos">

     </ListView>


</LinearLayout>
