<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="StandingsStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="PlayersStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/players</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="ScorerStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:text">0</item>
        <item name="android:gravity">center</item>


    </style>
    <style name="ButtonStandingStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:text">@string/see_standings</item>
        <item name="android:layout_gravity">center</item>


    </style>
    <style name="StandingStyleForGlobalActive" parent="@android:style/Widget.Button">
        <item name="android:layout_width">60dp</item>

        <item name="android:textColor">#ffe9e9e9</item>
        <item name="android:background">#ff02a335</item>
    </style>
    <style name="StandingStyleForGlobalDisable" parent="@android:style/Widget.Button">
        <item name="android:layout_width">60dp</item>

        <item name="android:textColor">#ffe9e9e9</item>
        <item name="android:background">#ffa30f04</item>
    </style>
    <style name="StandingStyleForGlobalView" parent="@android:style/Widget.Button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#ffb6150b</item>
        <item name="android:layout_gravity">center</item>



    </style>
    <style name="StandingStyleForGlobalHeader" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">#ff1c28b6</item>
        <item name="android:textColor">#fffcf2ff</item>


    </style>
    <style name="infoPlayer" parent="@android:style/Widget.Button">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">#ffe8e3e1</item>
        <item name="android:textColor">#ff032c3c</item>
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">2dp</item>


    </style>
    <style name="PlayerList" parent="@android:style/Widget.ListView">
        <item name="android:textSize">9px</item>
    </style>

</resources>
