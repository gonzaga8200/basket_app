<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="StandingsStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="PlayersStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/players</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="ScorerStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:text">0</item>
        <item name="android:gravity">center</item>


    </style>

</resources>
